MiniWindow
  id: phAnalyserMiniWindow
  &type: 'partyHuntAnalyser'
  !text: tr('Party Hunt')
  height: 225
  &save: true
  &autoOpen: true
  @onExtra: modules.game_analyser.onPartyHuntExtra(g_window.getMousePosition())

  UIWidget
    image-source: /images/icons/icon-partyhunt-widget
    anchors.top: parent.top
    anchors.left: parent.left
    margin-top: 3
    margin-left: 3

  ScrollablePanel
    id: contentsPanel
    anchors.fill: parent
    margin: 16 18 5 5
    vertical-scrollbar: miniwindowScrollBar

    Label
      id: sessionLabel
      !text: tr('Session:')
      anchors.top: parent.top
      anchors.left: parent.left
      text-auto-resize: true

    Label
      id: session
      !text: tr('00:00h')
      anchors.top: parent.top
      anchors.right: parent.right
      text-auto-resize: true

    Label
      id: lootTypeLabel
      !text: tr('Loot Type:')
      anchors.top: prev.bottom
      anchors.left: parent.left
      margin-top: 5
      text-auto-resize: true
      visible: true

    Label
      id: lootType
      !text: tr('Market')
      anchors.top: session.bottom
      anchors.right: parent.right
      margin-top: 5
      text-auto-resize: true
      visible: true

    Label
      id: lootLabel
      !text: tr('Loot:')
      anchors.top: lootType.bottom
      anchors.left: parent.left
      margin-top: 5
      text-auto-resize: true

    UIWidget
      size: 9 9
      image-auto-resize: true
      image-source: /images/icons/icon-goldcoin
      anchors.top: lootType.bottom
      anchors.right: parent.right
      margin-top: 8

    Label
      id: loot
      !text: tr('0')
      anchors.top: lootType.bottom
      anchors.right: prev.left
      margin-top: 5
      margin-right: 4
      text-auto-resize: true

    Label
      id: suppliesLabel
      !text: tr('Supplies:')
      anchors.top: lootLabel.bottom
      anchors.left: parent.left
      margin-top: 5
      text-auto-resize: true

    UIWidget
      size: 9 9
      image-auto-resize: true
      image-source: /images/icons/icon-goldcoin
      anchors.top: lootLabel.bottom
      anchors.right: parent.right
      margin-top: 8

    Label
      id: supplies
      !text: tr('0')
      anchors.top: lootLabel.bottom
      anchors.right: prev.left
      margin-top: 5
      margin-right: 4
      text-auto-resize: true

    Label
      id: balanceLabel
      !text: tr('Balance:')
      anchors.top: suppliesLabel.bottom
      anchors.left: parent.left
      margin-top: 5
      text-auto-resize: true

    UIWidget
      size: 9 9
      image-auto-resize: true
      image-source: /images/icons/icon-goldcoin
      anchors.top: suppliesLabel.bottom
      anchors.right: parent.right
      margin-top: 8

    Label
      id: balance
      !text: tr('0')
      anchors.top: suppliesLabel.bottom
      anchors.right: prev.left
      margin-top: 5
      margin-right: 4
      text-auto-resize: true

    HorizontalSeparator
      id: separator
      anchors.top: prev.bottom
      anchors.left: parent.left
      anchors.right: parent.right
      margin-top: 5

    Panel
      id: party
      size: 147 31
      anchors.top: prev.bottom
      anchors.left: parent.left
      anchors.right: parent.right
      margin-top: 5
      layout:
        type: verticalBox

  UIWidget
    id: miniborder
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    image-source: /images/ui/miniborder
    size: 14 14
    margin-left: 2
    margin-bottom: 2

  ResizeBorder
    id: bottomResizeBorder
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    height: 3
    minimum: 60
    margin-left: 3
    margin-right: 3